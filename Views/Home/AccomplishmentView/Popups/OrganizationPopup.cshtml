@{
    var months = Html.Months();
    var years = Html.YearsFromNow(25);
}

<div class="modal fade" id="profileOrgPopupModal" data-backdrop="static"
     data-keyboard="false" tabindex="-1"
     aria-labelledby="staticBackdropLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-lg artdeco-modal">
        <div class="modal-content position-relative overflow-hidden">
            <div class="dialog-overlay position-absolute d-none">
                <div class="spinner-grow text-info" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
            <div class="modal-header">
                <h2 class="modal-title" id="staticBackdropLabel">Add organization</h2>
                <button data-test-modal-close-btn="" aria-label="Close" id="ember132"
                        data-dismiss="modal"
                        type="button"
                        class="artdeco-modal__dismiss artdeco-button artdeco-button--circle artdeco-button--muted artdeco-button--2 artdeco-button--tertiary ember-view">
                    <li-icon aria-hidden="true" type="cancel-icon" class="artdeco-button__icon">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" data-supported-dps="24x24" fill="currentColor" class="mercado-match" width="24" height="24" focusable="false">
                            <path d="M13.42 12L20 18.58 18.58 20 12 13.42 5.42 20 4 18.58 10.58 12 4 5.42 5.42 4 12 10.58 18.58 4 20 5.42z"></path>
                        </svg>
                    </li-icon>

                    <span class="artdeco-button__text">

                    </span>
                </button>
            </div>
            <div class="modal-body">
                <div class="modal-body-container">
                    <form class="modal-form">
                        <div class="form-row">
                            <label class="form-label">Organization Name <span class="required">*</span></label>
                            <input class="form-control" />
                            <div class="form-error d-none">
                                <span>erro here</span>
                            </div>
                        </div>
                        <div class="form-row mt-3">
                            <label class="form-label">Position Held</label>
                            <input class="form-control" />
                            <div class="form-error d-none">
                                <span>erro here</span>
                            </div>
                        </div>
                        <div class="form-row mt-3">
                            <label class="form-label">Associated with</label>
                            <select class="form-control">
                                <option value="Please select">
                                    Please select
                                </option>
                                <option value="Elementary proficiency">
                                    Elementary proficiency
                                </option>
                                <option value="Limited working proficiency">
                                    Limited working proficiency
                                </option>
                                <option value="Full professional proficiency">
                                    Full professional proficiency
                                </option>
                                <option value="Professional working proficiency">
                                    Professional working proficiency
                                </option>
                                <option value="Native or bilingual proficiency">
                                    Native or bilingual proficiency
                                </option>
                            </select>
                            </select>
                            <div class="form-error d-none">
                                <span>erro here</span>
                            </div>
                        </div>
                        <div class="form-row mt-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="gridCheck1">
                                <label class="form-check-label ml-3 text-dark" for="gridCheck1">
                                    Membership Ongoing
                                </label>
                            </div>
                        </div>
                        <div class="mt-3 form-row d-flex flex-column">
                            <label class="form-label"> Start Date</label>
                            <div class="d-flex flex-row mt-1">
                                <div class="flex-grow-1 mr-1">
                                    <select class="form-control">
                                        <option value="">Month</option>
                                        @for (int i = 0; i < months.Length; i++)
                                        {
                                            <option value="@(i+1)">@months[i]</option>
                                        }
                                    </select>
                                </div>
                                <div class="flex-grow-1 ml-1">
                                    <select class="form-control">
                                        <option value="">Year</option>
                                        @for (int i = 0; i < months.Length; i++)
                                        {
                                            <option value="@(i+1)">@months[i]</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="mt-3 form-row d-flex flex-column">
                            <label class="form-label"> End Date</label>
                            <div class="d-flex flex-row mt-1">
                                <div class="flex-grow-1 mr-1">
                                    <select class="form-control">
                                        <option value="">Month</option>
                                        @for (int i = 0; i < months.Length; i++)
                                        {
                                            <option value="@(i+1)">@months[i]</option>
                                        }
                                    </select>
                                </div>
                                <div class="flex-grow-1 ml-1">
                                    <select class="form-control">
                                        <option value="">Year</option>
                                        @for (int i = 0; i < months.Length; i++)
                                        {
                                            <option value="@(i+1)">@months[i]</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-row mt-3">
                            <label class="form-label">Description</label>
                            <textarea class="form-control" rows="3"></textarea>
                            <div class="form-error d-none">
                                <span>erro here</span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="m-footer">
                <div id="ember150" class="artdeco-modal__actionbar display-flex justify-space-between flex-row-reverse py-2 ember-view">
                    <button class="artdeco-button modal-saveBtn" type="button">
                        Save
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>